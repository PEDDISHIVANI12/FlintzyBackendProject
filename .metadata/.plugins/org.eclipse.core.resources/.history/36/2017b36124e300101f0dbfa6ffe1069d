package com.flintzy.controller;

import com.flintzy.config.JwtUtil;
import com.flintzy.dto.JwtResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.oauth2.client.authentication.OAuth2AuthenticationToken;
import org.springframework.web.bind.annotation.*;

@RestController
@RequestMapping("/auth")
public class AuthController {

    @Autowired
    private JwtUtil jwtUtil;

    @PostMapping("/login")
    public String login(@RequestParam String email) {
        return jwtUtil.generateToken(email);
    }
    @GetMapping("/auth/oauth-success")
    public JwtResponse oauthSuccess(OAuth2AuthenticationToken token) {

        String email = token.getPrincipal().getAttribute("email");
        String name = token.getPrincipal().getAttribute("name");

        // Save / update user in DB
        User user = userRepository.findByEmail(email)
                .orElse(new User(email, name, "GOOGLE"));

        userRepository.save(user);

        // Generate JWT for this user
        String jwt = jwtUtil.generateToken(email);

        return new JwtResponse(jwt);
    }


}
